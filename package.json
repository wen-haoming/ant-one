{
  "name": "antd-one",
  "version": "0.0.1",
  "description": "Middle Platform FE one step!",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:one-codes": "cd ./packages/one-codes && npm run dev",
    "dev:components": "cd ./packages/components && npm run dev",
    "dev:docs": "dumi dev",
    "build": "run-s build:*",
    "build:components": "cd ./packages/components && npm run build",
    "build:one-codes": "cd ./packages/one-codes && npm run build",
    "docs:build": "cd ./packages/components && npm run build &&  cd ../one-codes && npm run build && cd ../../ && dumi build",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"packages/**/*.{css,less}\"",
    "lint:es": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install && dumi setup",
    "doctor": "father doctor",
    "prepublishOnly": "father doctor && npm run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "/docs/**/*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "packages/**/*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "packages/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx}": [
      "eslint --fix ",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ant-design/icons": "^4.7.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@formily/antd": "^2.2.12",
    "@swc/core": "^1.2.165",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@umijs/lint": "^4.0.0",
    "@umijs/plugins": "^4.0.33",
    "@unocss/cli": "^0.46.5",
    "@unocss/webpack": "^0.46.5",
    "ahooks": "^3.1.3",
    "animated-scroll-to": "^2.3.0",
    "antd": "^4.24.1",
    "dumi": "^2.0.5",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.3",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.2.0",
    "stylelint": "^14.9.1",
    "unocss": "^0.45.30",
    "vitest": "^0.25.3"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "435203093@qq.com"
  ]
}
